<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_edit_div"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/view_system_edit_input_mode"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/slt_btn_normal"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <TextView
            android:id="@+id/view_system_edit_tv_input_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="自动" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/cursor_down" />
    </LinearLayout>


    <EditText
        android:id="@+id/view_system_edit_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:background="@null"
        android:hint="请扫描货品"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textSize="12sp" />


    <ImageView
        android:id="@+id/view_system_edit_search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/slt_btn_normal"
        android:clickable="true"
        android:src="@drawable/search_small_icon" />

    <ImageView
        android:background="@drawable/slt_btn_normal"
        android:id="@+id/view_system_edit_iv_to_decode_camera"
        android:src="@drawable/btn_sao_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="6dp"
        android:clickable="true" />
</LinearLayout>