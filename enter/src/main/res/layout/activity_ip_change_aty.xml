<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_login_background"
    android:fitsSystemWindows="true"
    tools:context=".IPChangeAty">

    <com.shqtn.base.widget.TitleView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        app:title="@string/change_ip_title" />


    <LinearLayout
        android:id="@+id/ip_change_view_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_ip_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP(HTTP://):"
                android:textColor="@color/text_title_color"
                android:textSize="14sp" />

            <EditText
                android:singleLine="true"
                android:id="@+id/ip_change_et_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入ip"
                android:textColor="@color/text_title_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="端口号(port):"
                android:textColor="@color/text_title_color"
                android:textSize="14sp" />

            <EditText
                android:singleLine="true"
                android:id="@+id/ip_change_et_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入端口号"
                android:textColor="@color/text_title_color"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/ip_change_btn_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ip_change_view_group"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_btn_blue_normal"
        android:text="@string/yes"
        android:textColor="@color/text_white_color" />
</RelativeLayout>
