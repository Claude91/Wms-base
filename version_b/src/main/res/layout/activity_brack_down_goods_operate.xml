<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bb_rack_down_goods_operate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shqtn.b.exit.ui.BRackDownGoodsOperateActivity">

    <com.shqtn.base.widget.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleHeight"
        android:layout_alignParentTop="true"
        app:title="下架" />

    <com.shqtn.base.widget.SystemEditText
        android:id="@+id/b_rack_down_goods_operate_set_input_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleView"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/colorBlue"
            android:orientation="vertical"
            android:padding="@dimen/margin_normal">

            <com.shqtn.base.widget.LabelTextView
                android:id="@+id/b_rack_down_goods_operate_ltv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:color="@color/text_white_color"
                app:labelText="@string/name"
                app:size="@dimen/text_label_size" />

            <com.shqtn.base.widget.LabelTextView
                android:id="@+id/b_rack_down_goods_operate_ltv_sku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:color="@color/text_white_color"
                app:labelText="@string/sku"
                app:size="@dimen/text_label_size" />

            <com.shqtn.base.widget.LabelTextView
                android:id="@+id/b_rack_down_goods_operate_ltv_batchNO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:color="@color/text_white_color"
                app:labelText="@string/batch_no"
                app:size="@dimen/text_label_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <com.shqtn.base.widget.LabelTextView
                    android:id="@+id/b_rack_down_goods_operate_ltv_over_down_qty"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:color="@color/text_white_color"
                    app:labelText="已下架数量"
                    app:size="@dimen/text_label_size" />

                <com.shqtn.base.widget.LabelTextView
                    android:id="@+id/b_rack_down_goods_operate_ltv_unit"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:color="@color/text_white_color"
                    app:labelText="@string/unit"
                    app:size="@dimen/text_label_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <com.shqtn.base.widget.LabelTextView
                    android:id="@+id/b_rack_down_goods_operate_ltv_plan_down_qty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:color="@color/text_white_color"
                    app:labelText="待下架数量"
                    app:size="@dimen/text_label_size" />

                <com.shqtn.base.widget.LabelTextView
                    android:id="@+id/b_rack_down_goods_operate_ltv_std"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:color="@color/text_white_color"
                    app:labelText="@string/standard"
                    app:size="@dimen/text_label_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本次下架数量:"
                    android:textColor="@color/text_white_color"
                    android:textSize="@dimen/text_label_size" />

                <TextView
                    android:id="@+id/b_rack_down_goods_operate_tv_input_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_edit_div"
                    android:clickable="true"
                    android:singleLine="true"
                    android:textSize="@dimen/text_label_size" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/activity_bb_rack_down_goods_operate_bottom_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/b_rack_down_goods_operate_tv_submit_f1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorBlue"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/margin_normal"
            android:text="@string/submitF1"
            android:textColor="@color/text_white_color" />
    </LinearLayout>


</LinearLayout>
