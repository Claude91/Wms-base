<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
        <item name="colorAccent">#cabcbc</item>
        <item name="android:launchMode">singleTop</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:configChanges">screenSize|keyboardHidden</item>
        <item name="android:windowSoftInputMode">adjustUnspecified|stateHidden|adjustPan</item>
    </style>

    <style name="baseEditTextStyle">
        <item name="android:textColor">#ccc</item>
        <item name="android:textColorHint">#979797</item>
    </style>

    <style name="div_x">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#939393</item>
    </style>

    <style name="div_y">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#939393</item>
    </style>

    <style name="pw_manifest_no_find_text_title_style">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="bottomBtnStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/slt_btn_blue</item>
        <item name="android:paddingTop">@dimen/padding_top_or_bottom</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:paddingBottom">@dimen/padding_top_or_bottom</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="home_title_style">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">@dimen/padding_left_or_right</item>
        <item name="android:paddingTop">@dimen/padding_top_or_bottom</item>
        <item name="android:paddingBottom">@dimen/padding_top_or_bottom</item>
        <item name="android:background">@color/home_title_bg_color</item>
    </style>

    <style name="itemDetailsStyle">
        <item name="android:padding">@dimen/padding_top_or_bottom</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="layoutPadding" parent="textStyle">
        <item name="android:paddingLeft">@dimen/padding_left_or_right</item>
        <item name="android:paddingRight">@dimen/padding_left_or_right</item>
        <item name="android:paddingTop">@dimen/padding_top_or_bottom</item>
        <item name="android:paddingBottom">@dimen/padding_top_or_bottom</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="itemStyle" parent="textStyle">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:paddingTop">@dimen/padding_top_or_bottom</item>
        <item name="android:paddingBottom">@dimen/padding_top_or_bottom</item>
        <item name="android:paddingRight">@dimen/padding_left_or_right</item>
        <item name="android:paddingLeft">@dimen/padding_left_or_right</item>
    </style>

    <style name="textStyle">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/contentSize</item>
        <item name="android:textColor">@color/title_color</item>
    </style>

    <style name="itemTextBackgroundStyle" parent="textStyle">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_marginTop">@dimen/margin_top_or_bottom</item>
        <item name="android:paddingBottom">@dimen/padding_top_or_bottom</item>
        <item name="android:paddingRight">@dimen/padding_left_or_right</item>
        <item name="android:paddingLeft">@dimen/padding_left_or_right</item>
        <item name="android:paddingTop">@dimen/padding_top_or_bottom</item>
    </style>


</resources>
