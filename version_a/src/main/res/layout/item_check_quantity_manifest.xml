<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlue"
    android:orientation="vertical"
    android:paddingBottom="@dimen/x4"
    android:paddingLeft="@dimen/x8"
    android:paddingRight="@dimen/x8"
    android:paddingTop="@dimen/x4">

    <com.shqtn.base.widget.LabelTextView
        android:id="@+id/item_check_quantity_manifest_ltv_manifest_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:color="@color/text_white_color"
        app:labelText="盘点单号"
        app:size="@dimen/text_label_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x4"
        android:orientation="horizontal">

        <com.shqtn.base.widget.LabelTextView
            android:id="@+id/item_check_quantity_manifest_ltv_check_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:color="@color/text_white_color"
            app:labelText="盘点阶段"
            app:size="@dimen/text_label_size" />

        <com.shqtn.base.widget.LabelTextView
            android:id="@+id/item_check_quantity_manifest_ltv_check_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:color="@color/text_white_color"
            app:labelText="盘点类型"
            app:size="@dimen/text_label_size" />
    </LinearLayout>

</LinearLayout>