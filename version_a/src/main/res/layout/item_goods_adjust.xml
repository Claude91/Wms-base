<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlue"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_normal"
    android:paddingTop="@dimen/margin_normal">


    <com.shqtn.base.widget.LabelTextView
        android:id="@+id/item_goods_adjust_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        app:color="@color/colorWhite"
        app:labelText="@string/name"
        app:textSize="@dimen/text_label_size" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_top_normal"
        android:background="@color/div_color" />

    <com.shqtn.base.widget.LabelTextView
        android:id="@+id/item_goods_adjust_sku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_top_normal"
        app:color="@color/colorWhite"
        app:labelText="@string/sku"
        app:textSize="@dimen/text_label_size" />

    <com.shqtn.base.widget.LabelTextView
        android:id="@+id/item_goods_adjust_batch_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_top_normal"
        app:color="@color/colorWhite"
        app:labelText="@string/batch_no"
        app:textSize="@dimen/text_label_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.shqtn.base.widget.LabelTextView
            android:id="@+id/item_goods_adjust_unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_top_normal"
            android:layout_weight="1"
            app:color="@color/colorWhite"
            app:labelText="@string/unit"
            app:textSize="@dimen/text_label_size" />

        <com.shqtn.base.widget.LabelTextView
            android:id="@+id/item_goods_adjust_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_top_normal"
            android:layout_weight="1"
            app:color="@color/colorWhite"
            app:labelText="@string/quantity"
            app:textSize="@dimen/text_label_size" />
    </LinearLayout>


</LinearLayout>