<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlue"
    android:orientation="vertical"
    android:padding="@dimen/margin_normal">

    <com.shqtn.base.widget.LabelTextView
        android:id="@+id/item_rack_goods_ltv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x4"
        app:color="@color/text_white_color"
        app:labelText="@string/name"
        app:size="@dimen/text_label_size" />

    <com.shqtn.base.widget.LabelTextView
        android:id="@+id/item_rack_goods_ltv_sku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:color="@color/text_white_color"
        app:labelText="@string/sku"
        app:size="@dimen/text_label_size" />

    <com.shqtn.base.widget.LabelTextView
        android:id="@+id/item_rack_goods_ltv_batchNO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="6dp"
        app:color="@color/text_white_color"
        app:labelText="@string/batch_no"
        app:size="@dimen/text_label_size" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <com.shqtn.base.widget.LabelTextView
            android:id="@+id/item_rack_goods_ltv_over_down_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:color="@color/text_white_color"
            app:labelText="已下架数量"
            app:size="@dimen/text_label_size" />

        <com.shqtn.base.widget.LabelTextView
            android:id="@+id/item_rack_goods_ltv_unit"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:color="@color/text_white_color"
            app:labelText="@string/unit"
            app:size="@dimen/text_label_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <com.shqtn.base.widget.LabelTextView
            android:id="@+id/item_rack_goods_ltv_plan_down_qty"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:color="@color/text_white_color"
            app:labelText="待下架数量"
            app:size="@dimen/text_label_size" />

        <com.shqtn.base.widget.LabelTextView
            android:id="@+id/item_rack_goods_ltv_std"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:color="@color/text_white_color"
            app:labelText="@string/standard"
            app:size="@dimen/text_label_size" />
    </LinearLayout>
    <com.shqtn.base.widget.LabelTextView
        android:visibility="gone"
        android:id="@+id/item_rack_goods_ltv_rack_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:color="@color/text_white_color"
        app:labelText="@string/sku"
        app:size="@dimen/text_label_size" />
</LinearLayout>